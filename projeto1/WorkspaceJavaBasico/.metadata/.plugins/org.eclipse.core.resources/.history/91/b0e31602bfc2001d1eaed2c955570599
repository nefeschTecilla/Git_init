public class Operacoes {

	// Método Dinâmico
	public double calculaSoma(double num1, double num2) {
		double soma = num1 + num2;
		return soma;
	}

	// Método Dinâmico
	public double calculaSubtracao(double num1, double num2) {
		double sub = num1 - num2;
		return sub;
	}

	// Método Dinâmico
	public double calculaMultiplicacao(double num1, double num2) {
		double mult = num1 * num2;
		return mult;
	}

	// Método Dinâmico
	public double calculaDivisao(double num1, double num2) {
		double divi = num1 / num2;
		return divi;
	}
}

/*
 * Toda vez que eu utilizar um método Dinâmico dentro da minha Função/Método
 * Principal eu devo necessariamente declarar um Atributo/Objeto nessa classe Principal.
 */